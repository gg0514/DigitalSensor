<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:vm="using:DigitalSensor.ViewModels"
		  	 xmlns:ic="using:FluentIcons.Avalonia.Fluent"
			 xmlns:icons="using:Material.Icons.Avalonia"
             xmlns:views="using:DigitalSensor.Views"
			 mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="800"
             x:Class="DigitalSensor.Views.Calib_1PSampleView"
             x:DataType="vm:Calib_1PSampleViewModel">
	
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
	  <vm:Calib_1PSampleViewModel />
  </Design.DataContext>


	<UserControl.Resources>
		<StreamGeometry x:Key="icon_beaker">M67,334c-14,-14 -6,-39 34,-107 38,-64 41,-73 37,-128l-4,-59 56,0 56,0 -4,59c-4,55 -1,64 38,129 61,104 59,106 -86,110 -66,1 -123,-1 -127,-4zM300,309c0,-6 -12,-30 -26,-55l-26,-44 -58,0 -58,0 -26,44c-14,25 -26,49 -26,55 0,7 38,11 110,11 72,0 110,-4 110,-11zM226,174c-3,-9 -6,-38 -6,-65 0,-48 -1,-49 -30,-49 -29,0 -30,1 -30,49 0,27 -3,56 -6,65 -5,13 2,16 36,16 34,0 41,-3 36,-16z</StreamGeometry>
	</UserControl.Resources>

	<ScrollViewer Padding="20" Margin="0,30,0,0">
		<StackPanel Spacing="20">

			<!-- Title -->
			<TextBlock Text="{Binding Localize[1PSample]}" FontSize="28" FontWeight="Bold"/>


			<!-- 교정 지침 -->
			<Border
				Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
				CornerRadius="12"
				Padding="26"
				Margin="0,20,0,0"
				Effect="{DynamicResource ShadowElevation3}" >

				<StackPanel>
					<TextBlock Text="{Binding Localize[Guide]}" FontSize="14" Foreground="LightBlue"/>
					<StackPanel Margin="0,0,10,0">
						<StackPanel Orientation="Horizontal">
							<PathIcon Margin="10,20,30,0" Height="40" Width="40" Foreground="Gray" Data="{StaticResource icon_beaker}"/>
							<StackPanel Spacing="10">
								<TextBlock Text="{Binding Localize[1PGuide1]}" TextWrapping="Wrap" Width="270" FontSize="15" HorizontalAlignment="Left"/>
								<TextBlock Text="{Binding Localize[1PGuide2]}" TextWrapping="Wrap" Width="270" FontSize="15" Foreground="" HorizontalAlignment="Left"/>
								<TextBlock Text="{Binding Localize[1PGuide3]}" TextWrapping="Wrap" Width="270"  FontSize="15" Foreground="" HorizontalAlignment="Left"/>
							</StackPanel>
						</StackPanel>
					</StackPanel>
				</StackPanel>
			</Border>

			<!-- 현재값 -->
			<Border
				Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
				CornerRadius="12"
				Padding="26,26,26,12"
				Margin="0,10,0,0"
				Effect="{DynamicResource ShadowElevation3}" >

				<StackPanel Background="">
					<Grid  ColumnDefinitions="120, *, Auto" Margin="0,0,0,0">
						<TextBlock Grid.Column="0" Text="{Binding Localize[CurrentValue]}"  VerticalAlignment="Center" FontSize="14" Foreground="LightBlue"/>
						<TextBlock Grid.Column="1" Text="{Binding ReceivedData.Value}" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Normal" FontSize="30"
							   Margin="0,0,0,0"/>
									
						<Border Grid.Column="2" 
								HorizontalAlignment="Center" 
								VerticalAlignment="Center" 
								Width="60" Height="20" Margin="0,5,10,0" >
							<TextBlock Text="{Binding SensorUnit}" HorizontalAlignment="Center" FontWeight="Light" FontSize="14"/>
						</Border>
					</Grid>
					<Grid	ColumnDefinitions="120, *, Auto" Margin="0,0,0,0">

						<!-- 배경 클릭 영역 -->
						<Border Background="Transparent"
								PointerPressed="OnBackgroundPointerPressed"/>
						
						<TextBlock Grid.Column="0" Text="{Binding Localize[CalibrationValue]}"  VerticalAlignment="Center" FontSize="14" Foreground="LightBlue"/>

						<Grid Grid.Column="1">
							<TextBlock x:Name="ValueTextBlock"
								       Text="{Binding CalibValue}"
									   Background=""
									   Width="120"
									   TextAlignment="Center"
									   VerticalAlignment="Center"
									   HorizontalAlignment="Center"
									   FontWeight="Normal"
									   FontSize="30"
									   IsVisible="{Binding !IsEditing}"
									   PointerPressed="OnTextBlockClick"/>
							<TextBox x:Name="ValueTextBox"
								     Text="{Binding CalibValue, UpdateSourceTrigger=PropertyChanged}"
   								     Width="120"
									 TextAlignment="Center"
									 VerticalAlignment="Center"
									 HorizontalAlignment="Center"
									 FontSize="30"
									 IsVisible="{Binding IsEditing}"
									 KeyUp="OnTextBoxKeyUp"
									 LostFocus="OnTextBoxLostFocus"/>
						</Grid>
																	
						<Border Grid.Column="2" Background=""
								HorizontalAlignment="Center" 
								VerticalAlignment="Center" 
								Width="60" Height="90" Margin="0,5,10,0" >
							<StackPanel Background="">
								<Button Command="{Binding UpButtonCommand}" Height="30" Width="60" Margin="0,5,0,10">
									<ic:FluentIcon Icon="ChevronUp" IconVariant="Regular" IconSize="Size16" />
								</Button>
								<Button Command="{Binding DownButtonCommand}" Height="30" Width="60">
									<ic:FluentIcon Icon="ChevronDown" IconVariant="Regular" IconSize="Size16" />
								</Button>
							</StackPanel>
						</Border>
					</Grid>
				</StackPanel>
			</Border>

			<!-- 교정상태 -->
			<Border
				Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
				CornerRadius="12"
				Padding="26"
				Margin="0,10,0,0"
				Effect="{DynamicResource ShadowElevation3}" >

				<StackPanel>
					<Grid ColumnDefinitions="120, *, auto" Margin="0,0,0,10">
						<TextBlock Grid.Column="0" Text="{Binding Localize[CalibrationStatus]}" FontSize="14" Foreground="LightBlue"/>
						<TextBlock Grid.Column="1" Text="{Binding CalStatus, Converter={StaticResource EnumDescriptionConverter}}" HorizontalAlignment="Center" FontWeight="Normal" FontSize="30"
							   Margin="0,0,0,0"/>
						<Border Grid.Column="2" VerticalAlignment="Bottom" Width="50" Height="20" Margin="0,5,10,0" >
						</Border>
					</Grid>
				</StackPanel>
			</Border>


			<!-- 적용버튼 -->
			<UniformGrid Columns="2" Width="300" Height="100">
				<Button Content="{Binding Localize[Stop]}" Command="{Binding AbortCommand}"  IsEnabled="{Binding ModbusInfo.IsAlive}" Classes="" Margin="4" Width="135" Height="60"/>
				<Button Command="{Binding ApplyCommand}" IsEnabled="{Binding ModbusInfo.IsAlive}" Classes="accent" Margin="4" Width="135" Height="60">
					<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
						<ui:ProgressRing IsVisible="{Binding IsProgressVisible}"
									  Width="40" Height="40" Margin="0,0,15,0"
									  IsActive="True"/>
						<TextBlock Text="{Binding ApplyButtonText}" VerticalAlignment="Center"/>
					</StackPanel>
				</Button>
			</UniformGrid>

		</StackPanel>
	</ScrollViewer>
</UserControl>
