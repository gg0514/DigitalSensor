            android:padding="10dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_weight="50"/>
        <EditText
            android:id="@+id/Ethernet_Port_Ed"
            android:layout_width="0dp"
