    <LinearLayout
        android:id="@+id/Ethernet_SubnetMask"
        android:orientation="horizontal"
        android:background="#2c2d35"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="10">
        <TextView
            android:id="@+id/Ethernet_SubnetMask_Text"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/multi_subnet_mask"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_weight="50"/>
        <EditText
            android:id="@+id/Ethernet_SubnetMask_Ed"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="255.255.255.000"
            android:textColor="#38C6C8"
            android:padding="10dp"
            android:ems="10"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#141418"
            android:layout_weight="50"
            android:inputType="numberDecimal"
            android:digits="1234567890."
            android:hint="xxx.xxx.xxx.xxx"
            android:textColorHint="#2c2d35" />
