<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#2c2d35"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/Trend_Ph_Content"
        android:orientation="horizontal"
        android:background="#2c2d35"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="10">
        <TextView
            android:id="@+id/Trend_Ph_Content_Text"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/multi_trend_ph"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_weight="70"/>

        <Button
            android:id="@+id/Trend_Ph_Content_Btn_History"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="30"
            android:background="@drawable/my_button_base"
            android:text="@string/multi_load"
            android:textColor="#FFFFFF"
            android:visibility="visible" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Trend_Ph_Chart"
        android:orientation="horizontal"
        android:background="#000000"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="50">

        <!--<ProgressBar-->
            <!--android:id="@+id/Trend_Ph_Progress"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:visibility="invisible"-->
            <!--android:layout_weight="100"/>-->

        <ProgressBar
            android:id="@+id/Trend_Ph_Progress"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:scaleType="fitCenter"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            android:background="#212128"
            android:layout_weight="100"/>
    </LinearLayout>




    <LinearLayout
        android:id="@+id/Trend_Ph_Data"
        android:orientation="horizontal"
        android:background="#2c2d35"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="10">

        <TextView
            android:id="@+id/Trend_Ph_Data_Text_Title"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="20"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="pH:"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/Trend_Ph_Data_Text_Value"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="30"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="7.0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/Trend_Ph_Data_Average_Title"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text=""
            android:padding="10dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_weight="30"/>
        <TextView
            android:id="@+id/Trend_Ph_Data_Average_Value"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text=""
            android:padding="10dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_weight="20"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Trend_Ph_Confidence"
        android:orientation="horizontal"
        android:background="#2c2d35"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="10">

        <TextView
            android:id="@+id/Trend_Ph_Confidence_Title"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="50"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/multi_trend_confidence_level"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/Trend_Ph_Confidence_Value"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="50"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:visibility="invisible" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/Trend_Ph_X"
        android:orientation="horizontal"
        android:background="#2c2d35"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="10">

        <TextView
            android:id="@+id/Trend_Ph_X_Text_Title"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="50"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/multi_x_zoom_in_out"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/Trend_Ph_X_Btn_In"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="25"
            android:background="@drawable/my_button_base"
            android:text="@string/multi_in"
            android:textColor="#FFFFFF"
            android:visibility="invisible" />

        <Button
            android:id="@+id/Trend_Ph_X_Btn_Out"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="25"
            android:background="@drawable/my_button_base"
            android:text="@string/multi_out"
            android:textColor="#FFFFFF"
            android:visibility="invisible" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Trend_Ph_Previous"
        android:orientation="horizontal"
        android:background="#2c2d35"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="10">
        <TextView
            android:id="@+id/Trend_Ph_Previous_Text_Title"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/multi_previous_data"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_weight="50"/>

        <Button
            android:id="@+id/Trend_Ph_Previous_Btn_Left"
            android:text="◀"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="25"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/my_button_base" />

        <Button
            android:id="@+id/Trend_Ph_Previous_Btn_Right"
            android:text="▶"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="25"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/my_button_base" />
    </LinearLayout>
</LinearLayout>