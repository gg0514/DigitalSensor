    <LinearLayout
        android:id="@+id/Cali_Ch_PC_Radio"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="20"
        android:background="#2c2d35"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/Cali_Ch_PC_Radio_Group"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="50">

            <RadioButton
                android:id="@+id/Cali_Ch_PC_Fixed_Radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="50"
                android:gravity="center_vertical"
                android:text="@string/multi_fixed_ph"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/Cali_Ch_PC_Current_Radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="50"
                android:gravity="center_vertical"
                android:text="@string/multi_current_ph"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </RadioGroup>


        <LinearLayout
            android:id="@+id/Cali_Ch_PC_Edit"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="50"
            android:background="#2c2d35"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Cali_Ch_PC_Edit_Empty1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/Cali_Ch_PC_Edit_Ed"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="50"
                android:background="#141418"
                android:ems="10"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:text="1"
                android:textColor="#38C6C8" />

            <TextView
                android:id="@+id/Cali_Ch_PC_Edit_Empty2"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </LinearLayout>


